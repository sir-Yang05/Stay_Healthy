<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_diet_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Nutrition Plan"
        android:textColor="@color/text_primary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today"
        android:textColor="@color/accent_green"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_diet_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_calories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_card_dark"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_date">

        <TextView
            android:id="@+id/tv_cal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories Eaten"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/btn_clear_all_diet"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_delete"
            android:padding="2dp"
            app:tint="#FF5252"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_cal_eaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_cal_title" />

        <TextView
            android:id="@+id/tv_cal_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="6dp"
            android:text="/ Goal"
            android:textColor="@color/accent_green"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_cal_eaten"
            app:layout_constraintStart_toEndOf="@id/tv_cal_eaten" />

        <ProgressBar
            android:id="@+id/progress_calories"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="15dp"
            android:max="2000"
            android:progress="0"
            android:progressTint="@color/accent_green"
            android:progressBackgroundTint="#444444"
            app:layout_constraintTop_toBottomOf="@id/tv_cal_eaten" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_meals_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meals"
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_calories" />

    <LinearLayout
        android:id="@+id/row_breakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_card_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_meals_title">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_breakfast"
            app:tint="@color/accent_green"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breakfast"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_breakfast_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No food added"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add_breakfast"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add"
            android:padding="5dp"
            app:tint="@color/accent_green"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_card_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/row_breakfast">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_food"
            app:tint="@color/accent_green"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_lunch_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No food added"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add_lunch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add"
            android:padding="5dp"
            app:tint="@color/accent_green"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_card_dark"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/row_lunch">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dinner"
            app:tint="@color/accent_green"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinner"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_dinner_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No food added"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add_dinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add"
            android:padding="5dp"
            app:tint="@color/accent_green"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_water"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_button_accent"
        android:backgroundTint="#2196F3"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@id/row_dinner">

        <ImageView
            android:id="@+id/img_water"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_measuring_cup"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toEndOf="@id/img_water"
            app:layout_constraintEnd_toStartOf="@id/tv_water_count"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water Intake"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_water_recommendation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Base goal: 2000 ml"
                android:textColor="#BBDEFB"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_water_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 / 2000 ml"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
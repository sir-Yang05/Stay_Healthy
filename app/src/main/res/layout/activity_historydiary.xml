<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/light_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diary History"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/btn_manage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manage"
            android:textColor="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:padding="5dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/top_bar"
        android:padding="10dp"
        android:background="@color/light_yellow"
        android:gravity="center_vertical">
        <TextView android:text="Year:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinner_year" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
        <TextView android:text="Month:" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <Spinner android:id="@+id/spinner_month" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
    </LinearLayout>

    <ListView
        android:id="@+id/history_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filter_layout"
        android:background="@color/light_blue"
        android:layout_above="@id/bottom_action_bar"/>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:elevation="10dp">

        <Button
            android:id="@+id/btn_action_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#888888"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/btn_action_delete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete"
            android:backgroundTint="#F44336"
            android:layout_margin="10dp"/>
    </LinearLayout>

</RelativeLayout>
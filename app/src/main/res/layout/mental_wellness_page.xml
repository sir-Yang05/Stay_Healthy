<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MentalWellnessPage">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F8FF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental Health Journal"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2C3E50"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Mood"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:layout_marginBottom="20dp"/>

                <TextView
                    android:id="@+id/selected_mood_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select your mood"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:layout_marginBottom="15dp"
                    android:layout_gravity="center_horizontal"/>

                <GridLayout
                    android:id="@+id/mood_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:alignmentMode="alignBounds"
                    android:columnOrderPreserved="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_idk">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/idk"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I don't know"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_happy">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/happy"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Happy"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_neutral">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/neutral"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calm"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_sad">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/sad"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sad"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_anxious">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/anxious"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Anxious"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_angry">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/angry"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Angry"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_tired">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/tired"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tired"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/emotion_background"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/mood_other">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/other"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textSize="12sp"
                            android:textColor="#2C3E50"/>
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <Button
                android:id="@+id/write_diary_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#FFFF00"
                android:text="âœï¸ Write Diary"
                android:textSize="20sp"
                android:textColor="#FF000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40dp"/>
            <Button
                android:id="@+id/btn_view_history"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="#2196F3"
                android:text="ðŸ“… View History"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Entries"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#34495E"
                    android:layout_marginBottom="15dp"/>

                <TextView
                    android:id="@+id/latest_diary_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No entries for today yet~"
                    android:textSize="16sp"
                    android:textColor="#7F8C8D"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>
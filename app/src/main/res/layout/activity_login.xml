<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <!-- 1. Logo (使用您已有的 @drawable/Logo) -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="131dp"
        android:layout_height="117dp"
        android:layout_marginTop="60dp"
        android:contentDescription="App Logo"
        android:src="@drawable/stayhealthy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="60dp"
        android:hint="Enter Account / Email"
        android:background="@drawable/edit_text_rounded"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- 3. 密码输入框 (间隔 16dp) -->
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:hint="Enter Password"
        android:background="@drawable/edit_text_rounded"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/edit_username"
        app:layout_constraintStart_toStartOf="@id/edit_username"
        app:layout_constraintEnd_toEndOf="@id/edit_username"
        />

    <!-- 4. 登录按钮 (蓝色背景，间隔 24dp) -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:backgroundTint="#1E90FF"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/edit_password"
        app:layout_constraintStart_toStartOf="@id/edit_username"
        app:layout_constraintEnd_toEndOf="@id/edit_username"
        />

    <!-- 5. 忘记密码按钮 (靠右对齐) -->
    <TextView
        android:id="@+id/text_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Forgot Password?"
        android:textColor="#1E90FF"
        android:padding="8dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintEnd_toEndOf="@id/btn_login"
        />

    <!-- 6. 底部图标/注册选项 -->
    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="98dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:clickable="true"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal"
            android:text="Register"
            android:id="@+id/text_register"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:drawablePadding="4dp"
            android:gravity="center_horizontal"
            android:text="Other Login"
            android:textColor="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>